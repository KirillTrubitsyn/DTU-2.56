      "id": "auth-error",
      "name": "Auth Error",
      "type": "n8n-nodes-base.respondToWebhook",
      "typeVersion": 1.1,
      "position": [440, 480]
    },
    {
      "parameters": {
        "jsCode": "// Получаем данные из webhook\nconst body = $('Upload Webhook').first().json.body;\nconst content = body.content || '';\nconst title = body.title || 'Без названия';\nconst source = body.source || '';\nconst category = body.category || 'other';\n\n// Параметры разбиения\nconst CHUNK_SIZE = 1000;\nconst OVERLAP = 200;\n\n// Функция разбиения на чанки\nfunction splitIntoChunks(text, maxLength, overlap) {\n  const chunks = [];\n  let start = 0;\n  \n  while (start < text.length) {\n    let end = start + maxLength;\n    \n    // Ищем точку разрыва (конец предложения)\n    if (end < text.length) {\n      const lastPeriod = text.lastIndexOf('.', end);\n      const lastNewline = text.lastIndexOf('\\n', end);\n      const breakPoint = Math.max(lastPeriod, lastNewline);\n      \n      if (breakPoint > start + maxLength / 2) {\n        end = breakPoint + 1;\n      }\n    }\n    \n    chunks.push({\n      content: text.slice(start, end).trim(),\n      chunkIndex: chunks.length\n    });\n    \n    start = end - overlap;\n    if (start < 0) start = 0;\n    if (end >= text.length) break;\n  }\n  \n  return chunks;\n}\n\nconst chunks = splitIntoChunks(content, CHUNK_SIZE, OVERLAP);\n\n// Возвращаем массив чанков для обработки\nreturn chunks.map((chunk, i) => ({\n  json: {\n    title: chunks.length > 1 ? `${title} (часть ${i + 1}/${chunks.length})` : title,\n    content: chunk.content,\n    source: source,\n    category: category,\n    chunkIndex: i,\n    totalChunks: chunks.length\n  }\n}));"
      },
      "id": "split-chunks",
      "name": "Split into Chunks",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [440, 300]
    },
    {
      "parameters": {
        "batchSize": 1,
        "options": {}
      },
      "id": "batch-chunks",
      "name": "Process Chunks",
      "type": "n8n-nodes-base.splitInBatches",
      "typeVersion": 3,
      "position": [660, 300]
    },
    {
      "parameters": {
        "method": "POST",
        "url": "https://generativelanguage.googleapis.com/v1beta/models/text-embedding-004:embedContent",
        "authentication": "genericCredentialType",
        "genericAuthType": "httpQueryAuth",
        "sendBody": true,
        "specifyBody": "json",
        "jsonBody": "={\n  \"model\": \"models/text-embedding-004\",\n  \"content\": {\n    \"parts\": [\n      {\n        \"text\": {{ JSON.stringify($json.content) }}\n      }\n    ]\n  }\n}",
        "options": {
          "timeout": 30000
        }
      },
      "id": "get-chunk-embedding",
      "name": "Get Chunk Embedding",
      "type": "n8n-nodes-base.httpRequest",
      "typeVersion": 4.2,
      "position": [880, 300],
      "credentials": {
        "httpQueryAuth": {
          "id": "google-api-key",
          "name": "Google API Key"
        }
      },
      "retryOnFail": true,
      "maxTries": 3,
      "waitBetweenTries": 2000
    },
    {
      "parameters": {
        "jsCode": "// Получаем данные чанка и embedding\nconst chunk = $('Process Chunks').first().json;\nconst embeddingResponse = $input.first().json;\n\n// Извлекаем вектор\nlet embedding = null;\ntry {\n  embedding = embeddingResponse.embedding.values;\n} catch (e) {\n  console.log('Ошибка получения embedding:', e);\n}\n\nreturn {\n  title: chunk.title,\n  content: chunk.content,\n  source: chunk.source,\n  category: chunk.category,\n  embedding: embedding,\n  hasEmbedding: embedding !== null\n};"
      },
      "id": "prepare-insert",
      "name": "Prepare for Insert",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [1100, 300]
    },
    {
      "parameters": {
        "operation": "executeQuery",
        "query": "=INSERT INTO documents (title, content, source, category, embedding)\nVALUES (\n  {{ $json.title ? \"'\" + $json.title.replace(/'/g, \"''\") + \"'\" : \"NULL\" }},\n  {{ $json.content ? \"'\" + $json.content.replace(/'/g, \"''\") + \"'\" : \"NULL\" }},\n  {{ $json.source ? \"'\" + $json.source.replace(/'/g, \"''\") + \"'\" : \"NULL\" }},\n  {{ $json.category ? \"'\" + $json.category.replace(/'/g, \"''\") + \"'\" : \"NULL\" }},\n  {{ $json.embedding ? \"'[\" + $json.embedding.join(\",\") + \"]'::vector\" : \"NULL\" }}\n)\nRETURNING id, title"
      },
      "id": "insert-document",
      "name": "Insert to Supabase",
      "type": "n8n-nodes-base.supabase",
      "typeVersion": 1,
