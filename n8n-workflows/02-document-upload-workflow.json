    {
      "parameters": {
        "jsCode": "const results = $input.first().json.data;\n\nconst successful = results.filter(r => r.id);\nconst failed = results.filter(r => !r.id);\n\nreturn {\n  success: successful.length > 0,\n  message: `Загружено ${successful.length} документ(ов)`,\n  documents: successful.map(r => ({ id: r.id, title: r.title })),\n  warning: failed.length > 0 ? `${failed.length} документ(ов) не загружено` : null,\n  totalProcessed: results.length\n};"
      },
